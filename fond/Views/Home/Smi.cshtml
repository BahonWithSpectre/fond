@model IEnumerable<fond.DbFolder.Event>
<link href="~/css/smi.css" rel="stylesheet">

<div class="content">
    <div class="smi const-container">
        <h2 class="const-h2">Телеканалдар біз туралы</h2>
        <div class="smi_items">

            @foreach (var f in Model)
            {
                <div class="smi_item">
                    <div class="img_block">
                        <img src="~/img/gold.png">
                    </div>
                    <div class="smi_text_block">
                        <div class="smi_text">
                            <h2>@f.EventName</h2>
                            <p>
                                @f.Information
                            </p>
                        </div>
                        <a href="" class="more_btn">Толығырақ...</a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
