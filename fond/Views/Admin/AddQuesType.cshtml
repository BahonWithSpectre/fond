@model fond.DbFolder.QuestionType

@{
    ViewData["Title"] = "AddQues";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Жаңа Тақырып</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddQuesType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TypeName" class="control-label"></label>
                <input asp-for="TypeName" class="form-control" />
                <span asp-validation-for="TypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Қосу" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

